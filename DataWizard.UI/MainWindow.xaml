<Page
    x:Class="DataWizard.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DataWizard.UI"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <StackPanel Spacing="10">
            <TextBlock Text="Pilih File Excel:" FontWeight="Bold"/>
            <Button x:Name="SelectFileButton" Content="Browse Excel File" Click="SelectFileButton_Click" Width="150"/>

            <TextBlock Text="Masukkan Prompt:" FontWeight="Bold"/>
            <TextBox x:Name="PromptBox" Height="60" AcceptsReturn="True"/>

            <Button x:Name="RunButton" Content="Proses Data" Click="RunButton_Click" Width="100" Margin="0,10,0,0"/>

            <TextBlock Text="Hasil Output:" FontWeight="Bold"/>
            <TextBox x:Name="OutputBox" Height="200" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Page>
